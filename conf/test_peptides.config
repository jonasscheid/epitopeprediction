/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/epitopeprediction -profile test_peptides,<docker/singularity> --outdir <OUTDIR>
 */

process {
    resourceLimits = [
        cpus: 2,
        memory: '6.GB',
        time: '48.h'
    ]
}

params {
    config_profile_name = 'Test Profile of peptide list input'
    config_profile_description = 'Peptide list based test profile for mouse alleles by SYFPEITHI (default)'

    input  = params.pipelines_testdata_base_path + 'epitopeprediction/testdata/sample_sheets/sample_sheet_peptides.csv'
    tools = 'mhcflurry,mhcnuggets'
}
